<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="ConstraintLayout">
        <item name="android:background">@color/yellow_dark</item>
    </style>

    <style name="CustomImage">
        <item name="android:contentDescription">@string/pua</item>
    </style>

    <style name="CustomTitle">
        <item name="android:fontFamily">@font/amatica_sc_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>z4

    <style name="CustomLocation">
        <item name="android:fontFamily">@font/amatica_sc_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CustomDistance">
        <item name="android:fontFamily">@font/amatica_sc_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CustomNext">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="CustomBack">
        <item name="android:background">@color/indigo_dark</item>

    </style>


</resources>
